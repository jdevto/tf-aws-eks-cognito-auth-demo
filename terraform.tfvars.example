# Example terraform.tfvars - Copy to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

domain_name     = "example.com"
certificate_arn = "arn:aws:acm:REGION:ACCOUNT_ID:certificate/CERTIFICATE_ID"

# Optional: create a single Cognito demo user (email = username) in the admin group
# cognito_user_username = "admin@example.com"

# AWS EKS access entries (IAM principals that can access the cluster)
access_entries = {
  admin = {
    principal_arn = "arn:aws:iam::ACCOUNT_ID:role/ROLE_NAME"
    type          = "STANDARD"
    policy_associations = {
      admin = {
        policy_arn   = "arn:aws:eks::aws:cluster-access-policy/AmazonEKSClusterAdminPolicy"
        access_scope = { type = "cluster" }
      }
    }
  }
}
